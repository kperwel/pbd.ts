{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2017", "dom"]
  },
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "forkChecker": true,
    "useCache": true
  },
  "include": ["./types/**/*", "./src/**/*"],
  "exclude": ["node_modules", "dist"],
  "compileOnSave": true,
  "buildOnSave": false
}
